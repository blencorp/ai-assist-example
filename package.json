{
  "name": "ai-assist",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "check:all": "mise run check",
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "dev:web": "pnpm -r dev --filter web",
    "dev:api": "cd apps/api && uv run python main.py",
    "build": "pnpm -r build",
    "test": "cd apps/api && uv run pytest",
    "check:ci": "pnpm check:web && pnpm check:api",
    "check:web": "cd apps/web && pnpm format && pnpm lint && pnpm typecheck && pnpm build",
    "check:api": "cd apps/api && uv run ruff format . && uv run ruff check . && uv run basedpyright",
    "setup": "mise run setup",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "ultracite": "5.1.1"
  },
  "packageManager": "pnpm@10.13.1",
  "workspaces": [
    "apps/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ],
    "*.py": [
      "cd apps/api && uv run ruff format",
      "cd apps/api && uv run ruff check --fix"
    ]
  },
  "pnpm": {
    "overrides": {
      "focus-trap-react": "^11.0.4"
    }
  }
}
